{
  "name": "cleanx",
  "version": "2.1.0",
  "description": "Clean gitignored files safely across workspaces",
  "keywords": [
    "clean",
    "build",
    "artifacts",
    "typescript",
    "javascript",
    "monorepo",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-guzman/cleanx.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "bin": {
    "cleanx": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "coverage": "vitest run --coverage",
    "dev": "tsdown --watch",
    "format": "prettier --check --cache .",
    "format:fix": "prettier --write --cache .",
    "knip": "knip",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint --color .",
    "lint:fix": "pnpm lint --fix",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "is-ci || lefthook install",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "prettier": "@jimmy.codes/prettier-config",
  "dependencies": {
    "fdir": "^6.5.0",
    "ignore": "^7.0.5",
    "tinyglobby": "~0.2.15"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "20.2.0",
    "@jimmy.codes/eslint-config": "6.26.0",
    "@jimmy.codes/prettier-config": "2.1.2",
    "@manypkg/get-packages": "3.1.0",
    "@total-typescript/ts-reset": "0.6.1",
    "@types/node": "22.15.27",
    "@vitest/coverage-v8": "4.0.15",
    "clean-pkg-json": "1.3.0",
    "commitlint": "20.2.0",
    "eslint": "9.39.2",
    "gitzy": "6.5.7",
    "is-ci": "4.1.0",
    "jiti": "2.6.1",
    "knip": "5.73.4",
    "lefthook": "2.0.11",
    "ms": "3.0.0-canary.202508261828",
    "prettier": "3.7.4",
    "publint": "0.3.16",
    "tsdown": "0.17.3",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitzy": {
    "useCommitlintConfig": true
  }
}
