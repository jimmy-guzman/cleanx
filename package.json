{
  "name": "cleanx",
  "version": "1.0.8",
  "description": "Configurable cleaning tool for JavaScript/TypeScript projects",
  "keywords": [
    "clean",
    "build",
    "artifacts",
    "typescript",
    "javascript",
    "monorepo",
    "configurable",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-guzman/cleanx.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cleanx": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "coverage": "vitest run --coverage",
    "dev": "tsdown --watch",
    "format": "prettier --check --cache .",
    "format:fix": "prettier --write --cache .",
    "knip": "knip",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint --color .",
    "lint:fix": "pnpm lint --fix",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "is-ci || lefthook install",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "prettier": "@jimmy.codes/prettier-config",
  "dependencies": {
    "ansis": "4.1.0",
    "citty": "0.1.6",
    "picomatch": "4.0.2",
    "tinyglobby": "0.2.14",
    "unconfig": "7.3.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "19.8.1",
    "@jimmy.codes/eslint-config": "5.16.0",
    "@jimmy.codes/prettier-config": "1.5.0",
    "@manypkg/get-packages": "3.0.0",
    "@types/node": "22.15.27",
    "@types/picomatch": "4.0.0",
    "@vitest/coverage-v8": "3.2.3",
    "clean-pkg-json": "1.3.0",
    "commitlint": "19.8.1",
    "eslint": "9.29.0",
    "gitzy": "5.8.1",
    "is-ci": "4.1.0",
    "jiti": "2.4.2",
    "knip": "5.61.0",
    "lefthook": "1.11.13",
    "prettier": "3.5.3",
    "publint": "0.3.12",
    "tsdown": "0.12.7",
    "typescript": "5.8.3",
    "vitest": "3.2.3"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">= 20"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitzy": {
    "useCommitlintConfig": true
  }
}
